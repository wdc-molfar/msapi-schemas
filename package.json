{
  "name": "@molfar/msapi-schemas",
  "version": "1.0.0",
  "description": "MSAPI specification schemas",
  "main": "index.js",
  "scripts": {
    "test": "node ./build/docs/prepare && jest --no-cache --runInBand --forceExit --passWithNoTests",
    "dist": "rollup -c build/rollup/rollup.config.js",
    "build": "npm run test && npm run docs:schemas && npm run dist",
    "docs:schemas": "npx jsonschema2mk --schema ./schemas/json/msapi.schema.json >./doc/schemas/msapi.schema.md ",
    "publish": "npm run build && publish.bat"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wdc-molfar/msapi-schemas.git"
  },
  "module": "./dist/msapi-schemas.mjs",
  "exports": {
    ".": {
      "import": "./dist/msapi-schemas.mjs",
      "require": "./index.js"
    },
    "./package.json": "./package.json"
  },
  "author": "Andrey Boldak",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/wdc-molfar/msapi-schemas/issues"
  },
  "homepage": "https://github.com/wdc-molfar/msapi-schemas#readme",
  "devDependencies": {
    "@apidevtools/json-schema-ref-parser": "^9.0.9",
    "@molfar/jsonschema2md": "github:wdc-molfar/jsonschema2md",
    "@molfar/jsonschema2mk": "github:wdc-molfar/jsonschema2mk",
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^11.0.0",
    "ajv": "^8.6.3",
    "ajv-errors": "^3.0.0",
    "ajv-formats": "^2.1.1",
    "esm": "^3.2.25",
    "fs-extra": "^10.0.0",
    "glob": "^7.2.0",
    "jest": "^27.3.1",
    "jest-html-reporters": "^2.1.6",
    "json-refs": "^3.0.15",
    "prism-themes": "^1.9.0",
    "rollup": "^2.34.1",
    "rollup-plugin-node-polyfills": "^0.2.1",
    "rollup-plugin-terser": "^7.0.2",
    "yaml-ast-parser": "0.0.43"
  },
  "dependencies": {
    "js-yaml": "^4.1.0"
  },
  "jest": {
    "testMatch": [
      "**/?(*.)+(test).js"
    ],
    "collectCoverage": true,
    "coverageReporters": [
      "lcov"
    ],
    "coverageDirectory": "./doc/coverage",
    "reporters": [
      "default",
      [
        "./node_modules/jest-html-reporters",
        {
          "publicPath": "./doc/test",
          "filename": "index.html",
          "pageTitle": "@molfar/msapi-schemas"
        }
      ]
    ]
  }
}
